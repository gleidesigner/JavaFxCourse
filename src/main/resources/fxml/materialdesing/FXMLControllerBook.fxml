<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="313.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gleideveloper.com.br.materialdesign.FXMLControllerBook">
    <children>
        <VBox prefHeight="344.0" prefWidth="600.0">
            <children>
                <JFXTextField fx:id="title" prefHeight="29.0" prefWidth="400.0" promptText="Book Title">
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
                <JFXTextField fx:id="id" layoutX="20.0" layoutY="20.0" prefHeight="29.0" prefWidth="400.0" promptText="Book ID">
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
                <JFXTextField fx:id="author" layoutX="10.0" layoutY="59.0" prefHeight="29.0" prefWidth="400.0" promptText="Book Author">
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
                <JFXTextField fx:id="publisher" layoutX="10.0" layoutY="88.0" prefHeight="29.0" prefWidth="400.0" promptText="Publisher">
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </JFXTextField>
            <Pane prefHeight="113.0" prefWidth="600.0">
               <children>
                        <JFXButton fx:id="btnSave" buttonType="RAISED" layoutX="66.0" layoutY="19.0" onAction="#addBook" prefHeight="71.0" prefWidth="200.0" ripplerFill="WHITE" stylesheets="@../../styles/addbookstyles.css" text="Save" />
                        <JFXButton fx:id="btnCancel" buttonType="RAISED" layoutX="327.0" layoutY="19.0" onAction="#cancelBook" prefHeight="71.0" prefWidth="200.0" stylesheets="@../../styles/addbookstyles.css" text="Cancel" />
               </children>
            </Pane>
            </children>
        </VBox>
    </children>
</AnchorPane>
